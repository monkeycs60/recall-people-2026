# Database
DATABASE_URL=postgresql://user:password@host:5432/recall_people

# JWT Secret (512 bits recommended)
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-64-characters-for-512-bits

# API Keys
DEEPGRAM_API_KEY=your-deepgram-api-key
XAI_API_KEY=your-xai-grok-api-key
CEREBRAS_API_KEY=your-cerebras-api-key

# AI Provider Configuration
# Options: 'grok' (default) or 'cerebras'
# Use 'cerebras' to switch to Cerebras provider with gpt-oss-120b model
AI_PROVIDER=grok

# Google OAuth
GOOGLE_CLIENT_ID_WEB=your-google-client-id-web
GOOGLE_CLIENT_ID_IOS=your-google-client-id-ios
GOOGLE_CLIENT_ID_ANDROID=your-google-client-id-android

# Admin Access
ADMIN_EMAIL=your-admin-email@example.com
